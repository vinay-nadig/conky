#!/usr/bin/conky  -c
alignment tl
background yes				# Send conky to background.
cpu_avg_samples 2.0
default_color 000000
double_buffer yes			# Important. Eliminates flickering.
draw_graph_borders yes
draw_shades no				# Otherwise text is drawn twice :/
format_human_readable yes
gap_x 450
gap_y 40
maximum_width 1366
minimum_size 500 700
no_buffers yes
own_window yes
own_window_colour 000000
own_window_hints undecorated, below, sticky, skip_taskbar, skip_pager
own_window_transparent yes
own_window_type desktop		# Any other value than desktop will make the windows disappear when all windows are minimized.
short_units yes
show_graph_range yes
show_graph_scale yes
update_interval 2.0			# Interval at which conky updates.
use_xft yes
xftalpha 1
xftfont Kontrapunkt-Light:pixelsize=20

TEXT
${offset 120}${font Kontrapunkt-Bold:pixelsize=50}MARVIN
${offset 10}${font Kontrapunkt-Light:pixelsize=20}Kernel Version${alignr}${offset -40}${kernel}
${offset 10}Uptime${alignr}${offset -40}${uptime}
${if_up eth1}${offset 10}LAN IP${alignr}${offset -40}${addr eth1}${endif}

${offset 12}${font Kontrapunkt-Bold:pixelsize=50}${time %e %B %G}
${offset 125}${time %H:%M:%S}





${font Kontrapunkt-Light:pixelsize=20}CPU Temperature${alignr}${offset -40}${acpitemp}${iconv_start UTF-8 ISO_8859-1}Â° ${iconv_stop}C
CPU Load${alignr}${offset -40}${loadavg}
${cpugraph 25, 460}
